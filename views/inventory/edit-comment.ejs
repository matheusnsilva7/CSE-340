<h1><%= title %></h1>

<div class="vehicle-info">
  <h2>
    <%= comment.inv_year %> <%= comment.inv_make %> <%= comment.inv_model %>
  </h2>

  <p class="comment-date">
    Original comment posted on: <%= new
    Date(comment.created_at).toLocaleString() %>
  </p>
</div>

<%- messages() %>

<form action="/inv/comment/update" method="POST" class="comment-form">
  <input type="hidden" name="comment_id" value="<%= comment.comment_id %>" />
  <input type="hidden" name="inv_id" value="<%= comment.inv_id %>" />

  <label for="comment_text">Edit your comment:</label>
  <textarea id="comment_text" name="comment_text" required>
<%= comment.comment_text %></textarea
  >

  <button type="submit">Save Changes</button>

  <a class="cancel" href="/inv/detail/<%= comment.inv_id %>">Cancel</a>
</form>
